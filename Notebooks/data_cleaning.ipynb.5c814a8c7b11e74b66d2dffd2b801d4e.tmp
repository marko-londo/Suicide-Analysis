# Extracting Japan suicides from World suicides

japan_suicides_8516 = world_suicides[world_suicides["Country"] == "Japan"].copy()
# japan_suicides_8516.to_csv("japan_suicides_1985-2016(master).csv")

# Extracting yearly total suicides for Japan from 1985-2016

japan_suicides_8516 = (
    japan_suicides_8516.groupby("Year")["Number of Suicides"].sum().reset_index()
)
japan_suicides_8516["Country"] = "Japan"
japan_suicides_8516 = japan_suicides_8516[
    ["Country", "Year", "Number of Suicides"]
].reset_index(drop=True)
# japan_suicides_8516.to_csv("japan_suicides_1985-2016.csv", index=False)

# Extracting Japan suicide rates from World suicides

japan_suicide_rates_8516 = world_suicides[world_suicides["Country"] == "Japan"].copy()
japan_suicide_rates_8516 = (
    japan_suicide_rates_8516.groupby("Year")["Suicides per 100k"]
    .sum()
    .round(2)
    .reset_index()
)
japan_suicide_rates_8516["Country"] = "Japan"
japan_suicide_rates_8516 = japan_suicide_rates_8516[
    ["Country", "Year", "Suicides per 100k"]
].reset_index(drop=True)
